{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@components": ["src/components"],
      "@utils/*": ["src/utils/*"],
      "@utils": ["src/utils"],
      "@static/*": ["src/static/*"],
      "@static": ["src/static"],
      "@contexts/*": ["src/contexts/*"],
      "@contexts": ["src/contexts"],
      "@hooks/*": ["src/hooks/*"],
      "@hooks": ["src/hooks"],
      "@helpers/*": ["src/helpers/*"],
      "@helpers": ["src/helpers"],
      "@themes/*": ["src/themes/*"],
      "@themes": ["src/themes"],
      "@layout/*": ["src/layout/*"],
      "@layout": ["src/layout"],
    }
  },
  "exclude": ["node_modules"],
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"]
}
